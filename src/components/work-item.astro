---
import { Image } from 'astro:assets'

interface Props {
  description: string
  href: string
  image: ImageMetadata
  title: string
}

const { description, href, image, title } = Astro.props
---

<div class="flex flex-col text-gray-600">
  <a href={href}>
    <div
      class="my-4 flex max-h-[18rem] drop-shadow-lg transition-all hover:scale-110"
    >
      <Image alt={title} src={image} transition:name={href} />
    </div>
  </a>
  <p class="my-2 text-2xl">{title}</p>
  <p class="flex-grow leading-7 text-gray-600">
    {description}
  </p>
  <div>
    <a class="hover:underline" href={href}>View Project</a>
  </div>
</div>
