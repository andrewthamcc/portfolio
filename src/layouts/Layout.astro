---
import { ViewTransitions } from 'astro:transitions'
import '@fontsource/montserrat'

interface Props {
  showHomeLink?: boolean
  title: string
}

const { showHomeLink, title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="personal website of Andrew Tham" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image" href="/icon.png" />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="flex h-screen flex-col">
    <header>
      {
        showHomeLink && (
          <div class="mx-auto mt-20 w-4/5 max-w-7xl text-right">
            <a class="rounded-lg bg-gray-950 p-2 font-bold text-white" href="/">
              at
            </a>
          </div>
        )
      }
    </header>
    <div class="mx-auto w-4/5 max-w-7xl flex-1">
      <slot />
    </div>
    <footer class="bg-gray-950 py-2">
      <div class="mx-auto w-4/5 max-w-7xl">
        <p class="text-xs text-white">
          Andrew Tham Â© {new Date().getFullYear()}
        </p>
      </div>
    </footer>
  </body>
</html>
